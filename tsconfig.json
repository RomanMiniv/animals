{
	"compilerOptions": {
		"allowJs": false,
		"module": "NodeNext",
		"target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@configs/*": ["./configs/*"],
      "@utils": ["./src/utils"],
      "@shared": ["./src/shared"],
    }
	},
  "include": [
    "src",
    "src/.d.ts"
  ],
	"exclude": [
		"node_modules",
    "build",
	]
}
